<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mini_music_player" default="compile.module.mini_music_player">
  <dirname property="module.mini_music_player.basedir" file="${ant.file.module_mini_music_player}"/>
  
  <property name="module.jdk.home.mini_music_player" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mini_music_player" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mini_music_player" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mini_music_player" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="mini_music_player.output.dir" value="${module.mini_music_player.basedir}/out/production/Mini Music Player"/>
  <property name="mini_music_player.testoutput.dir" value="${module.mini_music_player.basedir}/out/test/Mini Music Player"/>
  
  <path id="mini_music_player.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mini_music_player.module.production.classpath">
    <path refid="${module.jdk.classpath.mini_music_player}"/>
  </path>
  
  <path id="mini_music_player.runtime.production.module.classpath">
    <pathelement location="${mini_music_player.output.dir}"/>
  </path>
  
  <path id="mini_music_player.module.classpath">
    <path refid="${module.jdk.classpath.mini_music_player}"/>
    <pathelement location="${mini_music_player.output.dir}"/>
  </path>
  
  <path id="mini_music_player.runtime.module.classpath">
    <pathelement location="${mini_music_player.testoutput.dir}"/>
    <pathelement location="${mini_music_player.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mini_music_player">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mini_music_player">
    <patternset refid="excluded.from.module.mini_music_player"/>
  </patternset>
  
  <path id="mini_music_player.module.sourcepath">
    <dirset dir="${module.mini_music_player.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mini_music_player" depends="compile.module.mini_music_player.production,compile.module.mini_music_player.tests" description="Compile module Mini Music Player"/>
  
  <target name="compile.module.mini_music_player.production" depends="register.custom.compilers" description="Compile module Mini Music Player; production classes">
    <mkdir dir="${mini_music_player.output.dir}"/>
    <javac2 destdir="${mini_music_player.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mini_music_player}/javac">
      <compilerarg line="${compiler.args.mini_music_player}"/>
      <bootclasspath refid="mini_music_player.module.bootclasspath"/>
      <classpath refid="mini_music_player.module.production.classpath"/>
      <src refid="mini_music_player.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mini_music_player"/>
    </javac2>
    
    <copy todir="${mini_music_player.output.dir}">
      <fileset dir="${module.mini_music_player.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mini_music_player.tests" depends="register.custom.compilers,compile.module.mini_music_player.production" description="compile module Mini Music Player; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mini_music_player" description="cleanup module">
    <delete dir="${mini_music_player.output.dir}"/>
    <delete dir="${mini_music_player.testoutput.dir}"/>
  </target>
</project>